{
    "compilerOptions": {
      "target": "es2019",       // depending on the Node.js version, you can set a higher or lower target
      "module": "commonjs",     // Node.js uses commonjs module resolution
      "lib": ["esnext", "DOM"],        // Specify library files to be included in the compilation
      "outDir": "./dist",       // Redirect output structure to the directory
      "rootDir": "./src",       // Specify the root directory of input files
      "strict": true,           // Enable all strict type-checking options
      "esModuleInterop": true,  // Enables ES6-style imports
      "skipLibCheck": true      // Skip type checking of all declaration files
    },
    "include": ["src/**/*"],     // Specify files to be included in compilation
    "exclude": ["node_modules"]  // Exclude the node_modules directory
}